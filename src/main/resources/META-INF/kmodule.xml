<?xml version="1.0" encoding="UTF-8"?>
<kmodule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://www.drools.org/xsd/kmodule">

    <kbase name="rools" packages="rools" eventProcessingMode="stream">
        <ksession name="all-rules"/>
    </kbase>

    <kbase name="promotion" packages="promotion">
        <ksession name="promotion"/>
    </kbase>

    <kbase name="stateless" packages="stateless">
        <ksession name="statelessSession" type="stateless"/>
        <ksession name="statelessSessionWithoutType"/>
    </kbase>

    <kbase name="rule-attribute" packages="attribute">
        <ksession name="rule-attribute"/>
    </kbase>

    <kbase name="rule-cep" packages="cep" eventProcessingMode="stream">
        <ksession name="rule-cep"/>
    </kbase>

</kmodule>